<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <FrameLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp" />



    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rect_upline_gray"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_main_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_main_home_off" />

            <TextView
                android:id="@+id/tv_main_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/mian_payment"
                android:textColor="@color/colorTitle"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_main_transactions_no" />

            <TextView
                android:id="@+id/tv_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/mian_transactions"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_main_mine_no" />

            <TextView
                android:id="@+id/tv_main_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_3"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/mian_me"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
